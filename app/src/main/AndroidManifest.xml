<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.smarthouse">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SmartHouse"
        android:usesCleartextTraffic="true">
        <activity android:name=".MessageScreen.MessageActivity"></activity>
        <activity android:name=".SearchDeviceScreen.SearchDeviceActivity" />
        <activity android:name=".MainScreen.MainActivity" />
        <activity
            android:name=".RegScreen.RegActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".AuthScreen.AuthActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".SplashScreen.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>